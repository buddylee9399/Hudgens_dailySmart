.row
  .col-md-12.page-heading-wrapper
    h1
      = 'My Feed'

.full-width-div
  .feed-wrapper
    .card
      .col-md-12
        - if @posts.any?
          = render @posts

          = paginate @posts
        - else
          .not-following
            h2
              = 'There are no posts from the users that you follow'
            p
              = link_to 'Find other users to follow', smarties_path
